<?xml version="1.0" encoding="UTF-8"?>
<phpunit
    bootstrap="vendor/autoload.php"
    colors="true"
    verbose="true"
    stopOnFailure="false"
    cacheResult="false">

    <testsuites>
        <testsuite name="Application Test Suite">
            <directory suffix=".php">tests</directory>
        </testsuite>
    </testsuites>

    <coverage>
        <include>
            <directory suffix=".php">app</directory>
        </include>
        <report>
            <clover outputFile="coverage/coverage-report.xml"/>
        </report>
    </coverage>
</phpunit>
